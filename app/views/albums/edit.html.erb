<h1>Edit an album</h1>

<form action="<%= edit_album_url(@album) %>" method="post">
  <%= auth_token %>

  <input type="hidden" name="_method" value="patch">

  <label for="band">Band:</label>
  <select name="album[band_id]", id="band">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>" <%= "selected" if @album.band_id == band.id %> >
        <%= band.name %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="title">Title:</label>
  <input type="text" name="album[title]" id="title" value="<%= @album.title %>">
  <br>

  Live Album:<input type="radio" name="album[live]" value="true" <%= "checked" if @album.live %> >
  Studio Album:<input type="radio" name="album[live]" value="false" <%= "checked" unless @album.live %> >
  <br>

  <input type="submit" value="Edit album">
</form>
<br>
<%= button_to "Delete this album", album_url(@album), method: :delete %>
