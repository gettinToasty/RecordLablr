<h1>Add a new album</h1>

<form action="<%= band_albums_url %>" method="post">
  <%= auth_token %>

  <label for="title">Title:</label>
  <input type="text" name="album[title]" id="title">
  <br>

  Live Album:<input type="radio" name="album[live]" value="true">
  Studio Album:<input type="radio" name="album[live]" value="false" checked>
  <br>

  <input type="submit" value="Add album">
</form>
