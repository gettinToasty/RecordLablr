<h1>Add a new album</h1>

<form action="<%= albums_url %>" method="post">
  <%= auth_token %>

  <label for="band">Band:</label>
  <select name="album[band_id]", id="band">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>" <%= "selected" if params[:band_id] == band.id %> >
        <%= band.name %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="title">Title:</label>
  <input type="text" name="album[title]" id="title">
  <br>

  <p>Live Album:</p><input type="radio"
                           name="album[live]"
                           value="true" >
  <p>Studio Album:</p><input type="radio"
                             name="album[live]"
                             value="false"
                             checked >
  <br>

  <input type="submit" value="Add album">
</form>
