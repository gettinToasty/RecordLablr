<h1>Edit a track</h1>

<form action="<%= edit_track_url(@track) %>" method="post">
  <%= auth_token %>

  <input type="hidden" name="_method" value="patch">

  <label for="album">Album:</label>
  <select name="track[album_id]", id="album">
    <% @albums.each do |album| %>
      <option value="<%= album.id %>" <%= "selected" if @track.album_id == album.id %> >
        <%= album.title %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="title">Title:</label>
  <input type="text" name="track[title]" id="title" value="<%= @track.title %>" >
  <br>

  Bonus Track:<input type="radio" name="track[bonus]" value="true" <%= "checked" if @track.bonus == "true" %> >
  Normal Track:<input type="radio" name="track[bonus]" value="false" <%= "checked" if @track.bonus == "false" %> >
  <br>

  <textarea name="track[lyrics]" rows="30" cols="80"><%= @track.lyrics %></textarea>

  <input type="submit" value="Edit track">
</form>

<br><br>
<%= button_to "Delete this track", track_url(@track), method: :delete %>
