<h1>Add a new track</h1>

<form action="<%= tracks_url %>" method="post">
  <%= auth_token %>

  <label for="album">Album:</label>
  <select name="track[album_id]", id="album">
    <% @albums.each do |album| %>
      <option value="<%= album.id %>" <%= "selected" if params[:album_id] == album.id %> >
        <%= album.title %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="title">Title:</label>
  <input type="text" name="track[title]" id="title">
  <br>

  <label for="track[bonus]">Bonus Track:</label>
  <input type="radio"
         name="track[bonus]"
         value="true" >
  <label for="track[bonus]">Normal Track:</label>
  <input type="radio"
         name="track[bonus]"
         value="false"
         checked >
  <br>

  <label for="track[lyrics]">Lyrics:</label><br>
  <textarea name="track[lyrics]" rows="30" cols="40"></textarea>
  <br>

  <input type="submit" value="Add track">
</form>
